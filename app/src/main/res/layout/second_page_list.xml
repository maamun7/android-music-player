<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50.0dip"
    android:orientation="horizontal"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    android:layout_marginBottom="0.10dp"
    android:background="@drawable/recyclear_selector_row"
    android:id="@+id/second_page_list">

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/main_button_selector"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="1.0dip"
        android:layout_marginLeft="2dp">

        <ImageView
            android:id="@+id/art_img"
            android:layout_width="60.0dip"
            android:layout_height="44.0dip"
            android:scaleType="centerInside" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="4.0dip"
        android:paddingBottom="4.0dip"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip">

        <TextView
            android:id="@+id/list_top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/song_title_in_list"
            android:textColor="@color/song_title_color_in_list"
            android:textSize="@dimen/song_title_text_size" />

        <TextView
            android:id="@+id/list_bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Artist name"
            android:textColor="@color/artist_name_color_in_list"
            android:textSize="@dimen/sont_artist_text_size" />

    </LinearLayout>

</LinearLayout>



